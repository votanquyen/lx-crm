# Database
# Option 1: Neon PostgreSQL (Recommended for cloud deployment - Free tier available)
# DATABASE_URL="postgresql://[user]:[password]@[host]/[database]?sslmode=require"
# Example: postgresql://neondb_owner:npg_xxx@ep-blue-tree-123.ap-southeast-1.aws.neon.tech/neondb?sslmode=require

# Option 2: Local PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/locxanh?schema=public"

# Authentication
AUTH_SECRET="your-auth-secret-here-generate-with-openssl-rand-base64-32"
NEXTAUTH_URL="http://localhost:3000"

# Google OAuth
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
